@require 'common'

.dm-checkbox-label
  cursor pointer
  user-select(none)
  display: inline-block
  min-height 36px
  position: relative
  // line-height 36px

  -webkit-tap-highlight-color rgba(0,0,0,0)

  padding 8px 8px

  // this is to make sure ink works as advertized
  position: relative


.dm-checkbox-content
  vertical-align middle
  &.off
    color alpha(#000000, 0.74)
  &.disabled
    color alpha(#000000, 0.26)


.dm-checkbox-icon
  margin-right 8px
  &:before
    font-size 18px
  vertical-align middle
  // primary
  &.on
    color $dm-color-primary
  &.off
    color alpha(#000000, 0.54)
  &.disabled
    color alpha(#000000, 0.26)

  transition color linear 0.3s
